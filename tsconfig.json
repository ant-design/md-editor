{
  "compilerOptions": {
    "typeRoots": [
      "./src/utils"             // 添加你放置 index.d.ts 的目录
    ],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "esnext",
    "declaration": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "@ant-design/md-editor": ["src"],
      "@ant-design/md-editor/*": ["src/*", "*"]
    }
  },
  "include": [".dumirc.ts", "src/**/**/*", "src/MarkDown/demos/.tsx", "tests/**/*"],
}
